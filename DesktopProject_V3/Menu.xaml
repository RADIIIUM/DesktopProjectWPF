                                <LinearGradientBrush>
                                    <GradientStop Offset="0.3" Color="#422D52" />
                                    <GradientStop Offset="0.7" Color="#754790" />
                                </LinearGradientBrush>
                            </WrapPanel.Background>

                            <Grid HorizontalAlignment="Center"
