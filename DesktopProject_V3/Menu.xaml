                                Click="AddNews_Click">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="1"
                                                      Color="Red"
                                                      BlurRadius="30"
                                                      />
                                </Button.Effect>
                            </Button>

                        </StackPanel>



                    </ScrollViewer>
                </TabItem>
                <!--==============================================================
                    Контент "Магазин"
        ==============================================================-->
