                                            <materialDesign:PackIcon
        Kind="BookOpenVariant" />
                                        </Button>
                                        <StackPanel
      Grid.Row="1"
      Margin="8,24,8,0">
                                            <TextBlock
        FontWeight="Bold" x:Name="Paragraph2">
      Cycling
                                            </TextBlock>
                                            <TextBlock
        VerticalAlignment="Center"
        Text="A great way to keep fit and forget about the constant grind of IT."
        TextWrapping="Wrap" x:Name="Desc2" />
                                        </StackPanel>

                                    </Grid>
                                </materialDesign:Card>


                                <materialDesign:Card
  Width="200" Margin="0,0,20,0">
                                    <Grid Height="233">
                                        <Grid.RowDefinitions>
                                            <RowDefinition
        Height="140" />
                                            <RowDefinition
        Height="*" />
                                            <RowDefinition
        Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Rectangle
      Width="196"
      Height="140"
      Stretch="UniformToFill" x:Name="Img3"/>
