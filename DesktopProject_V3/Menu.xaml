                                                Margin="100,0,0,0"
                                                >

                                            <materialDesign:PackIcon Kind="ArrowLeftBoldHexagonOutline"
                                                Height="25"
                                                Width="25"
                                                                     Foreground="White"/>
                                        </Button>

                                        <Ellipse Fill="HotPink" 
                                                 Grid.Row="1"
                                                 Height="30" 
                                                 Width="30"
                                                 Margin="80,0,0,0"
                                                 />
                                        <Ellipse Fill="LightPink" 
                                                 Grid.Row="1"
                                                 Height="20" 
                                                 Width="20"
                                                 Margin="0,0,80,0"
                                                 Opacity="0.7"
                                                 />
                                        <Ellipse Fill="LightPink" 
                                                 Grid.Row="1"
                                                 Height="20" 
                                                 Width="20"
                                                 Opacity="0.7"/>

                                        <Button Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
                                                 Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                Grid.Row="1"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,100,0"
                                                >
                                            <materialDesign:PackIcon Kind="ArrowRightBoldHexagonOutline" 
                                                                     Height="25"
                                                                     Width="25"
                                                                     Foreground="White"/>
                                        </Button>
                                    </Grid>


                                </materialDesign:TransitionerSlide>

                            </materialDesign:Transitioner>

                            <!--// Карточки с фотками-->

                            <StackPanel Margin="0,50,0,0"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">

                                <materialDesign:Card
