<Window x:Class="DesktopProject_V3.AddBalance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopProject_V3"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавить денег" Height="101" Width="368">
    <StackPanel>
        <TextBlock Text="Сколько денег хотите (не более 2 млрд)"/>
        <TextBox  Text="1000" x:Name="Balance"/>
        <Button Click="Button_Click" Content="Магия" />
    </StackPanel>
</Window>
